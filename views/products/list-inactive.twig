{% extends 'templates/default.twig' %}

{% block title %} POS | Point Of Sale {% endblock %}

{% block content %}

<div class="container" style="margin-top:30px">
	<div class="col-md-10 col-md-offset-0">
		<div class="panel panel-default">
			<div class="panel-heading"><h3 class="panel-title"><strong>Product Inactive</strong></h3></div>
			<form action="{{ path_for('product.inactive.post') }}" method="POST">
				<div class="box-body no-padding">
					<table class="table">
						<tr>
							<th>Title</th>
							<th>Description</th>
							<th>Price</th>
							<th>Image</th>
							<th style="width: 40px">Restore</th>
							<th style="width: 40px">Delete</th>
						</tr>
						{% for product in product %}
						<tr>
							<td>{{ product.title }}</td>
							<td>{{ product.short_desc }}</td>
							<td>{{ product.price }}</td>
							<td>{{ product.image }}</td>
							<td class="text-center"><a href="{{ base_url() }}/product/list/activated/{{ product.id }}"><i class="fa fa-repeat" aria-hidden="true"></i></a></td>
							<td class="text-center"><input type="checkbox" name="product[]" value="{{ product.id }}"></td>
						</tr>
						{% endfor %}
					</table>
					<hr style="margin-top:10px;margin-bottom:0px;" >
				</div>
				<div class="panel-body" align="right">
					<button type="submit" name="button"  class="btn btn-danger"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i> Delete</button>
					<hr style="margin-top:13px;margin-bottom:1px;">
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}
